{
	"name": "@obelusfi/trioxide",
	"version": "0.4.8",
	"license": "MIT",
	"description": "Svelte 5 customizable componets, focused on non-trivial UI pieces that are tedious to reimplement.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ObelusFi/trioxide.git"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"release": "bun run scripts/release.ts"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./theme.css": "./dist/index.css"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@hbsnow/rehype-sectionize": "^1.0.7",
		"@shikijs/markdown-it": "^3.19.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/postcss": "^4.1.18",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@types/bun": "^1.3.4",
		"@types/markdown-it": "^14.1.2",
		"markdown-it": "^14.1.0",
		"mdsvex": "^0.12.6",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"publint": "^0.3.16",
		"rehype-slug": "^6.0.0",
		"remixicon": "^4.7.0",
		"shiki": "^3.19.0",
		"svelte": "^5.45.9",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.2.7"
	},
	"keywords": [
		"svelte",
		"components",
		"context-menu",
		"dock-layout",
		"drag-and-drop",
		"keyboard-shortcuts",
		"rtl"
	]
}
